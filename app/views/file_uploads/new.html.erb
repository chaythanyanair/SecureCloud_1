<% if !@file_upload.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @file_upload.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-12">
        <%= render 'shared/flash_messages' %>
    </div>  
</div>
<br />
<%= render 'users/user'%>
<div class="col-sm-7">
<h2>Add new file</h2>
   <%= form_for [@user,@file_upload], html: { multipart: true } do |f| %>
      <%= f.label :Ownername %>
      <%= f.text_field :owner %>

      <%= f.label :filename %><br>
      <%= f.text_field :fname %>

      <%= f.label :filetype %><br>
      <%= f.text_field :ftype %>

      <label for="keywords">Keywords(comma separated)</label><br>
      <%= text_area_tag :keywords,"Enter Keywords"  %>    <br>

      <label for="shared_with">Who can see the file?</label>&nbsp;&nbsp;&nbsp;&nbsp;
      <%= f.radio_button :shared_with,"Public"%>&nbsp;&nbsp;&nbsp;&nbsp;<label>Public</label>&nbsp;&nbsp;&nbsp;&nbsp;
      
      <%= f.radio_button :shared_with,"Private"%>&nbsp;&nbsp;&nbsp;&nbsp;<label>Private</label>&nbsp;&nbsp;&nbsp;&nbsp;

      <%= f.radio_button :shared_with,"Selected Users"%>&nbsp;&nbsp;&nbsp;&nbsp;
      <label>Selected Users (List below)</label>&nbsp;&nbsp;&nbsp;&nbsp;
      
      <br><%= f.text_area_tag :shared_users,"Enter email id of users" , :id=>"div1"%>
      <br><br>
      <%= f.label :Attachment %>
      <%= f.file_field :attachment %>
		      
     <br> 
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>


